<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flask HTMX App</title>
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.2.0/mdb.min.css" rel="stylesheet" />
    <script src="{{ url_for('static', filename='js/htmx.min.js') }}"></script>

</head>

<body>
    <div class="container">
        <h1>Ikea Second Hand Search</h1>
        <div class="d-flex flex-row">
            <form class="row row-cols-lg-auto g-3 align-items-center">
                <div class="dropdown_countries">
                    <button data-mdb-button-init data-mdb-ripple-init data-mdb-dropdown-init data-mdb-auto-close="true"
                        class="btn btn-primary dropdown-toggle" type="button" id="CountriesDropdownMenuButton"
                        data-mdb-toggle="dropdown_countries" aria-expanded="false" hx-get="/available_countries"
                        hx-target="#available_countries_list" hx-trigger="load once">
                        Select Country
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton" id="available_countries_list">
                        <!-- Call dropdown block here -->
                    </ul>
                </div>

                <div class="dropdown_stores">
                    <button data-mdb-button-init data-mdb-ripple-init data-mdb-dropdown-init data-mdb-auto-close="true"
                        class="btn btn-primary dropdown-toggle" type="button" id="StoresDropdownMenuButton"
                        data-mdb-toggle="dropdown_stores" aria-expanded="false" hx-get="/available_stores"
                        hx-target="#available_stores_list"
                        hx-trigger="change from:#available_countries_list > input"
                        hx-include="#available_countries_list">
                        Select Stores
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton" id="available_stores_list">
                        <!-- Call dropdown block here -->
                    </ul>
                </div>
                <div class="input-group">
                    <div class="form-outline" data-mdb-input-init>
                        <input type="search" id="search_term" name="search_term" class="form-control" />
                        <label class="form-label" for="form1">Search</label>
                    </div>
                    <button type="submit" class="btn btn-primary" data-mdb-ripple-init hx-post="/search"
                        hx-target="#search_results">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>
        </div>
        <div id="search_results">
            <table>
                <thead>
                    <tr>
                        <th>Item</th>
                        <th>Price</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>




    <!-- MDB -->
    <script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.2.0/mdb.umd.min.js"></script>
</body>

</html>